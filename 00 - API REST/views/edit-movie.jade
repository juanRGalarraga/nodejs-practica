extends layout

block content
	section.container
		include header
		div.item
			form.form(method="POST" action="/actualizar/#{data[0].id}")
				fieldset
					div.container.p1
						label.item.i-b.v-top.ph3.p_25.right(for="imdb_link") IMDB id:
						input.item.i-b.v-top.ph9.p_25#imdb_link(type="text", name="imdb_link", value="#{data[0].imdb_link}", required)
						input#id(type="hidden", name="id", value="#{data[0].id}", required)
					div.container.p1
						label.item.i-b.v-top.ph3.p_25.right(for="title") Título:
						input.item.i-b.v-top.ph9.p_25#title(type="text", name="title", value="#{data[0].title}" required)
					div.container.p1
						label.item.i-b.v-top.ph3.p_25.right(for="release_year") Año:
						input.item.i-b.v-top.ph9.p_25#release_year(type="text", name="release_year", value="#{data[0].release_year}" required)
					div.container.p1
						label.item.i-b.v-top.ph3.p_25.right(for="rating") Calificación:
						input.item.i-b.v-top.ph9.p_25#rating(type="text", name="rating", value="#{data[0].rating}" required)
					div.container.p1
						label.item.i-b.v-top.ph3.p_25.right(for="image") Poster:
						input.item.i-b.v-top.ph9.p_25#image(type="text", name="image", value="#{data[0].image}" required)
					div.container.p1
						input.item.ph4.mauto.button.edit(type="submit", value="Editar")
						input(type="hidden", name="_method", value="PUT")